            <div class="random-card col-sm-4 col-md-3 col-lg-2 col-xl- mb-3">
                <a href="/<%= item.mediaType %>/<%= item.id %>?title=<%= encodeURIComponent(item.title) %>" class="random-link">
                    <div class="car h-100">
                      <img class="card" src="https://image.tmdb.org/t/p/w200/<%= item.backdrop_path %>" alt="Poster for <%= item.title %>">
                       <div class="card-flags">
                         <i class="fi fi-us"></i>
                       </div>
                       <script async src="https://js.onclckmn.com/static/onclicka.js" data-admpid="280551"></script>
                       <div class="card-body">
                        <i class=""></i><h3 class="card-title"><%= item.title %></h3>
                        </div>
                    </div>
                    <script async src="https://js.onclckmn.com/static/onclicka.js" data-admpid="280587"></script>
                  </a>
            </div>
         <% }); %>
        <% } else { %>
       <p>No random items found.</p>
      <% } %>
