     <div class="slider-controls">
        <button class="slider-prev"></button>
       <button class="slider-next"></button>
     </div>
</div>

  <h3>Editors' Pick</h3>
      <div class="container ms2">
        <div class="row ms-2">
          <% combinedData.forEach(movie => { %>
            
            <div class="col-md-3 col-6 col-sm-4 col-lg-2">
              <a href="/<%= movie.mediaType %>/<%= movie.id %>?title/<%= encodeURIComponent(movie.title) %>" class="lu-one">
              <div class="cad">
                <div class="card-body">
                <% if (movie.background || movie.poster_path) { %>
                  <img src="https://image.tmdb.org/t/p/w200/<%= movie.background ? movie.background : movie.poster_path %>" class="card" alt="<%= movie.title %> Poster">
                <% } %>
                
                  <h3 class="card-titl"><%= movie.title %></h3>
                </div>
                 </a>
               
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    
     
<nav aria-label="Page navigation example">
  <ul class="pagination">
    <% if (currentPage > 1) { %>
      <li class="page-item me-auto"><a class="page-link" href="/?page=<%= currentPage - 1 %>">&larr; Previous</a></li>
    <% } %>
    <% if (currentPage < 2) { %>
      <li class="page-item"><a class="page-link" href="/?page=<%= currentPage + 1 %>">Next &rarr;</a></li>
    <% } %>
  </ul>
</nav>

